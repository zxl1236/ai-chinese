  "main": "index.html",
  "scripts": {
    "start": "npx serve . -l 3000",
    "dev": "live-server --port=3000 --entry-file=index.html",
    "build": "npm run build:css && npm run build:js",
    "build:css": "echo 'Building CSS...'",
    "build:js": "echo 'Building JavaScript...'",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.{js,css,html}",
    "test": "echo 'Running tests...'",
    "deploy:github": "gh-pages -d .",
    "deploy:netlify": "netlify deploy --prod --dir=.",
